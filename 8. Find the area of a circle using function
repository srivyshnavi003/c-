#include <iostream>
#include <cmath>

// Function to calculate the area of a circle
double calculateCircleArea(double radius) {
    return M_PI * std::pow(radius, 2);
}

int main() {
    // Declare a variable to store the radius of the circle
    double radius;

    // Read in the radius of the circle
    std::cout << "Enter the radius of the circle: ";
    std::cin >> radius;

    // Validate input for a non-negative radius
    if (radius < 0) {
        std::cout << "Invalid input. Please enter a non-negative radius." << std::endl;
        return 1; // Return an error code
    }

    // Call the calculateCircleArea function to find the area
    double area = calculateCircleArea(radius);

    // Display the result
    std::cout << "The area of the circle with radius " << radius << " is: " << area << std::endl;

    return 0;
}
