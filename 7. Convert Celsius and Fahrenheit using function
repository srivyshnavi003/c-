#include <iostream>

// Function to convert Celsius to Fahrenheit
double celsiusToFahrenheit(double celsius) {
    return (celsius * 9.0 / 5.0) + 32.0;
}

// Function to convert Fahrenheit to Celsius
double fahrenheitToCelsius(double fahrenheit) {
    return (fahrenheit - 32.0) * 5.0 / 9.0;
}

int main() {
    // Declare variables to store temperature values
    double celsius, fahrenheit;

    // Read in temperature in Celsius
    std::cout << "Enter temperature in Celsius: ";
    std::cin >> celsius;

    // Call the celsiusToFahrenheit function to convert Celsius to Fahrenheit
    fahrenheit = celsiusToFahrenheit(celsius);

    // Display the result
    std::cout << "Temperature in Fahrenheit: " << fahrenheit << "°F" << std::endl;

    // Read in temperature in Fahrenheit
    std::cout << "Enter temperature in Fahrenheit: ";
    std::cin >> fahrenheit;

    // Call the fahrenheitToCelsius function to convert Fahrenheit to Celsius
    celsius = fahrenheitToCelsius(fahrenheit);

    // Display the result
    std::cout << "Temperature in Celsius: " << celsius << "°C" << std::endl;

    return 0;
}
