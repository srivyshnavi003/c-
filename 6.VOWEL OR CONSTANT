#include <iostream>

int main() {
    // Declare a variable to store the character
    char ch;

    // Read in a character
    std::cout << "Enter a character: ";
    std::cin >> ch;

    // Check if the character is a vowel or a consonant
    // Assuming English alphabet for simplicity
    if ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z')) {
        // Check if the character is a vowel
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
            ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U') {
            std::cout << ch << " is a vowel." << std::endl;
        } else {
            std::cout << ch << " is a consonant." << std::endl;
        }
    } else {
        std::cout << "Invalid input. Please enter a valid character." << std::endl;
    }

    return 0;
}
